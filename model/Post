//Database schema
const mongoose = require('mongoose');
const PostSchema = new mongoose.Schema({

    title: {
        type: String,
        required: true
    },
    author:{
        type: String,
        required: true
    },
    link:{
        type: String,
        required: true
    },
    university:{
        type: String,
        required: false
    },
    datepub:{
        type: String,
        required: true
    }

});

module.exports = mongoose.model('academic',PostSchema);
